.bg{
	height: 80rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	background-color: #ffba1e;
}
.nav{
	width: 100%;
	height: 100%;
}
.scrollview{
	display: flex;
	margin-left: 20rpx;
	height: 100%;
}
.selected,.normal{
	width: 140rpx;
	line-height: 60rpx;
	text-align: center;
	padding: 0 20px;
	color: red;
	border-bottom: 5rpx solid #fff;
}
.normal{
	color: #000;
	border-bottom: none;
}
.hr{
	width: 100%;
	height: 10rpx;
	border-color: #ccc;
}